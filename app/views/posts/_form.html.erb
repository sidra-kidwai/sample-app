
<%= form_for(@post,  remote: true, html: {class: 'form-horizontal'} ) do |f| %>

  <%= render 'shared/error_messages' %>
  <div class="field form-group">
    <%= f.label :title %><br>
    <div class="col-sm-10">
      <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category"}) %> <br>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :picture, "Add a picture related to the post" %><br>
    <div class="col-sm-10">
      <%= f.file_field :picture %> <br>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :title %><br>
    <div class="col-sm-10">
      <%= f.text_field :title,  placeholder: "Type the post title here", class: "input" %><br>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :content %><br>
    <div class="col-sm-10">
      <%= f.text_area :content, size: "60x12", placeholder: "Type the post text here" %> <br>
    </div>
  </div>
  <%= f.submit  "Create", class: "btn btn-success", data: {disable_with: "Creating post.."} %> 
  <%= link_to "Back", root_path, class: "btn btn-info" %>

<% end %>
